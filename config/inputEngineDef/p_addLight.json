{
	"title": "add light",
	"type": "object",
	"properties": {
		"voice_interpretation": {
			"type": "object",
			"attraction": "weak",
			"properties": {
				"event": {
					"type":"string",
					"enum": ["RecoComplete"]
				},
				"semantic": {
					"type": "object",
					"properties": {
						"addLight": {
							"type": "object",
							"properties": {
								"light": {
									"type": "string",
									"not": 
									{
										"enum": ["undefined"]
									}
								}
								
							},
							"required": ["light"]
						}
					},
					"required": ["addLight"]
				},
				"start": {
					"type": "number"
				},
				"end": {
					"type": "number"
				}

			},
			"required": ["event", "semantic", "start", "end"]
		},

		"touch_interpretation": {
			"type": "object",
			"attraction": "weak",
			"properties" : {
				"x": {
					"type": "number"
				},
				"y": {
					"type": "number"
				},
				"timestamp": {
					"type": "number"
				}
			},
			"required": ["x","y", "timestamp"]
		},

		"context_interpretation": {
			"type": "object",
			"attraction": "weak",
			"properties": {
				"currentViewName": {
					"type": "string",
					"enum": ["main", "welcome"]
				}
			},
			"required": ["currentViewName"]
		}
	},



	"required": ["voice_interpretation", "touch_interpretation", "context_interpretation"],


	"constraints": {		
		"time": {
			"operation": "gestureSpeechMatch",
			"data": {
				"scope": {
					"gesture": "touch_interpretation",
					"speech": "voice_interpretation"
				}
			}
		}
	},

	"output": {
		"event": "addLights",
        "target": "Application",
		"data": {
			"scope": {
				"lightPosition" : "touch_interpretation"
			}
		}
	},

	"expired": 4000
}